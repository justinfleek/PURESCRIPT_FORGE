  "easterEggs": {
    "_description": "Hidden delights and reward moments",
    
    "triggers": {
      "konamiCode": {
        "sequence": ["up", "up", "down", "down", "left", "right", "left", "right", "b", "a"],
        "effect": "rainbow-mode",
        "duration": 5000,
        "description": "Activates rainbow accent cycling"
      },
      "tripleClickEmpty": {
        "trigger": "triple-click on empty area",
        "effect": "stardust-burst",
        "duration": 800,
        "description": "Brief sparkle explosion at click point"
      },
      "typingStreak": {
        "trigger": "50 characters without pause",
        "effect": "flow-state-glow",
        "intensity": "scales with streak length",
        "description": "Subtle ambient glow intensifies during flow state"
      },
      "successfulSave": {
        "trigger": "file save or compile success",
        "effect": "micro-celebration",
        "variants": ["pulse", "shimmer", "confetti-mini"],
        "duration": 400,
        "description": "Brief positive feedback animation"
      },
      "longSession": {
        "trigger": "90 minutes continuous coding",
        "effect": "gentle-aurora",
        "message": "You're on fire! Maybe stretch?",
        "duration": 3000,
        "description": "Gentle reminder with beautiful aurora effect"
      },
      "midnightOil": {
        "trigger": "coding between 2am-4am",
        "effect": "night-owl-theme-shift",
        "description": "Subtle warm shift to reduce eye strain"
      }
    },

    "celebrations": {
      "micro": {
        "particles": 5,
        "duration": 300,
        "colors": "theme-accent"
      },
      "standard": {
        "particles": 12,
        "duration": 500,
        "colors": ["accent", "accentSecondary"]
      },
      "major": {
        "particles": 25,
        "duration": 800,
        "colors": ["accent", "gold", "silver"],
        "includesGlow": true
      }
    }
  },

  "performanceConfig": {
    "_description": "Settings to ensure smooth performance",
    
    "particleSystem": {
      "maxParticles": 30,
      "targetFPS": 30,
      "pauseWhenHidden": true,
      "reduceOnBattery": true,
      "disableOnLowEnd": true
    },
    
    "animations": {
      "useGPU": true,
      "transformOnly": true,
      "willChangeHint": true,
      "reducedMotionFallback": "instant"
    },
    
    "rendering": {
      "useRequestIdleCallback": true,
      "batchDOMUpdates": true,
      "debounceResize": 100,
      "throttleScroll": 16
    },

    "memoryManagement": {
      "poolParticles": true,
      "reuseGradients": true,
      "cleanupOnHide": true
    }
  }
}
